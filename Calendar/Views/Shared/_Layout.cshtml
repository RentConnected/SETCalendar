@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@{
    string CurrentUrl = ViewData["Url"].ToString();
    string ImageUrl = ViewData["Image"].ToString();
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Calendar</title>
    <link rel="icon" href="~/images/logo/set.svg">

    <link rel=”canonical” href="@CurrentUrl"/>
    <meta http-equiv=”Content-Type” content=”text/html; charset=utf-8″ />
    <meta name="description" content="@ViewData["Description"]">

    <meta property="og:url" content="@CurrentUrl" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="@ViewData["Title"] - Calendar" />
    <meta property="og:description" content="@ViewData["Description"]" />
    <meta property="og:image" content="@ImageUrl" />

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Prompt">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav>
            <div class="">
                <div class="d-flex header-nav">
                    <div class="mr-auto p-2">
                        <img src="~/images/logo/set.svg" class="logo-set" />
                    </div>
                    <div class="p-2 div-setmarkeitwork">
                        <a href="@Url.Action("Index", "Home")">
                            <img src="~/images/shared/home.svg" class="logo-home" />
                        </a>
                        <a data-toggle="modal" data-target="#menu">
                            <img src="~/images/shared/menu.svg" class="logo-menu" />
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="version">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <section>
        <div class="modal fade hide" id="menu" tabindexdialog="-1" aria-hidden="true" data-backdrop="true">
            <div class="modal-dialog modal-dialog-centered custom-size-dialog-sharesocial" style="overflow-y:hidden">
                <div class="modal-content">
                    <a class="btn-close" data-dismiss="modal" aria-label="Close">
                        <img src="~/images/shared/button-close-black.svg" style="width:4vw;max-width: 30px;" />
                    </a>
                    <div class="share-panel-dialog-sharesocial">
                        @await Html.PartialAsync("~/Views/Shared/ShareSocialMedia.cshtml", new ShareDialogModels() { Url = CurrentUrl })
                    </div>
                </div>
            </div>
        </div>
    </section>

    <footer class="border-top footer text-muted">
        <div class="container">
            <div class="d-flex">
                <a href="https://www.setsocialimpact.com/" class="mr-auto p-2">
                    <label style="cursor:pointer;margin: auto;">www.setsocialimpact.com</label>
                </a>
                <div class="p-2 div-setmarkeitwork">
                    <img src="~/images/logo/setmakeitwork.svg" class="logo-setmakeitwork" />
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
