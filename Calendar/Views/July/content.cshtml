@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@{
    Layout = null;
    ShareDialogModels shareDialogModels = new ShareDialogModels();
    string CurrentUrl = ViewData["Url"].ToString();
    string BaseUrl = ViewData["BaseUrl"].ToString();
}

<style scoped>

    @@media (min-aspect-ratio: 16/9) {
        .july-a {
            top: 32vh;
            left: 20%;
        }

        .july-b {
            top: 30vh;
            right: 18%;
        }
    }

    @@media (min-aspect-ratio: 21/9) {
        .july-a {
            top: 32vh;
            left: 24%;
        }

        .july-b {
            top: 30vh;
            right: 22%;
        }
    }
</style>

<section class="nav-dialog desktop" id="navdialog">
    <div class="button-dialog-right" style="@Localizer["29style"]">
        <div class="row">
            <div class="column">
                <p class="header-text-orange">@Localizer["29header"]</p>
                <p class="text-black">@Localizer["29text"]</p>
            </div>
            <div class="column">
                <a data-toggle="modal" data-target="@("#dialog"+29)">
                    <img src="~/images/shared/circle.svg" />
                </a>
            </div>
        </div>
    </div>
    <div class="button-dialog-left" style="@Localizer["31style"]">
        <div class="row">
            <div class="column">
                <a data-toggle="modal" data-target="@("#dialog"+31)">
                    <img src="~/images/shared/circle.svg" />
                </a>
            </div>
            <div class="column">
                <p class="header-text-orange">@Localizer["31header"]</p>
                <p class="text-black">@Localizer["31text"]</p>
            </div>
        </div>
    </div>
</section>

<section class="image-calendar desktop" id="cover" onload="javascript: coverLoaded();" style="background-image: url('@BaseUrl/images/index.jpg'); background-repeat: no-repeat; background-size: cover; background-position: center center; height: 100vh; width: 100%">
</section>
<section class="image-calendar mobile">
    <img src="@BaseUrl/images/index.mobile.jpg" style="width: 100%" />
</section>

<section class="pagination desktop">
    <div class="div-pagination" style="bottom: 6vh;right: 18%;">
        <a class="pagination-left" href="@Url.Action("Index", "December")">
            <img src="~/images/shared/pagination-left.svg" />
        </a>
        <a class="pagination-right" href="@Url.Action("Index", "August")">
            <img src="~/images/shared/pagination-right.svg" />
        </a>
    </div>
</section>

<section class="pagination container mobile">
    <div class="div-pagination" style="bottom: 2vh;justify-content: space-between;width: 87vw;margin-left: -3vw;">
        <a class="pagination-left-mobile" href="@Url.Action("Index", "December")">
            <img src="~/images/shared/backwhite.mobile.svg" />
        </a>
        <a class="pagination-right-mobile" href="@Url.Action("Index", "August")">
            <img src="~/images/shared/nextwhite.mobile.svg" />
        </a>
    </div>
</section>

<section class="nav-dialog mobile">
    <div class="">
        <div class="row">
            <div class="column-image">
                <a data-toggle="modal" data-target="@("#dialogmobile"+29)">
                    <img src="@BaseUrl/images/image 29.mobile.jpg" />
                </a>
            </div>
            <div class="column-text">
                <div class="verticlecenter">
                    <p class="header-text-orange">@Localizer["29header"]</p>
                    <p class="text-black">@Localizer["29text"]</p>
                </div>
            </div>
        </div>
    </div>
    <div class="">
        <div class="row">
            <div class="column-image">
                <a data-toggle="modal" data-target="@("#dialogmobile"+31)">
                    <img src="@BaseUrl/images/image 31.mobile.jpg" />
                </a>
            </div>
            <div class="column-text">
                <div class="verticlecenter">
                    <p class="header-text-orange">@Localizer["31header"]</p>
                    <p class="text-black">@Localizer["31text"]</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="desktop">
    <div class="modal fade hide" id="@("dialog" + 29)" tabindexdialog="-1" aria-hidden="true" data-backdrop="true">
        <a class="btn-close" data-dismiss="modal" aria-label="Close">
            <img src="~/images/shared/button-close.svg" style="width: 4vw; max-width: 30px;" />
        </a>
        <div class="modal-dialog modal-dialog-centered custom-size-dialog">
            <div class="modal-content">
                <div class="infograpic">
                    <img src="@BaseUrl/images/image 29.jpg" class="infographic-image" loading="lazy" />
                </div>
                <div class="share-panel-dialog">
                    @await Html.PartialAsync("~/Views/Shared/ShareSocialMedia.Dialog.cshtml", new ShareDialogModels() { Url = $"{BaseUrl}?date={29}" })
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade hide" id="@("dialog" + 31)" tabindexdialog="-1" aria-hidden="true" data-backdrop="true">
        <a class="btn-close" data-dismiss="modal" aria-label="Close">
            <img src="~/images/shared/button-close.svg" style="width: 4vw;max-width: 30px;" />
        </a>
        <div class="modal-dialog modal-dialog-centered custom-size-dialog">
            <div class="modal-content">
                <div class="infograpic">
                    <img src="@BaseUrl/images/image 31.jpg" class="infographic-image" loading="lazy" />
                </div>
                <div class="share-panel-dialog">
                    @await Html.PartialAsync("~/Views/Shared/ShareSocialMedia.Dialog.cshtml", new ShareDialogModels() { Url = $"{BaseUrl}?date={31}" })
                </div>
            </div>
        </div>
    </div>
</section>

<section class="mobile">
    <div class="modal fade hide" id="@("dialogmobile" + 29)" tabindexdialog="-1" aria-hidden="true" data-backdrop="true">
        <a class="btn-close" data-dismiss="modal" aria-label="Close">
            <img src="~/images/shared/button-close.svg" style="width: 4vw; max-width: 30px;" />
        </a>
        <div class="modal-dialog custom-size-dialog">
            <div class="modal-content modal-black">
                <div class="infograpic">
                    <img src="@BaseUrl/images/image 29.jpg" class="infographic-image" loading="lazy" />
                    <div class="share-panel-dialog">
                        @await Html.PartialAsync("~/Views/Shared/ShareSocialMedia.Dialog.mobile.cshtml", new ShareDialogModels() { Url = $"{BaseUrl}?date={29}" })
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade hide" id="@("dialogmobile" + 31)" tabindexdialog="-1" aria-hidden="true" data-backdrop="true">
        <a class="btn-close" data-dismiss="modal" aria-label="Close">
            <img src="~/images/shared/button-close.svg" style="width: 4vw;max-width: 30px;" />
        </a>
        <div class="modal-dialog custom-size-dialog">
            <div class="modal-content modal-black">
                <div class="infograpic">
                    <img src="@BaseUrl/images/image 31.jpg" class="infographic-image" loading="lazy" />
                    <div class="share-panel-dialog">
                        @await Html.PartialAsync("~/Views/Shared/ShareSocialMedia.Dialog.mobile.cshtml", new ShareDialogModels() { Url = $"{BaseUrl}?date={31}" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>